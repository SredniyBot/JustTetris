    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.byte_value.justtetris.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background">
